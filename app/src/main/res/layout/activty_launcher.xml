<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/main_bg_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        tools:ignore="MissingConstraints" />

    <ImageView

        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints" />

    <com.jiang.tvlauncher.view.TitleView
        android:id="@+id/titleview"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleview"
        app:layout_constraintVertical_bias="0.08"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/title_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/round"
            android:padding="5dp"
            android:src="@drawable/ic_yuyin"
            android:tint="@color/white" />

        <TextView
            android:id="@+id/title_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kuang_0"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kuang_1"
            android:gravity="center"
            android:paddingLeft="28dp"
            android:paddingTop="5dp"
            android:paddingRight="28dp"
            android:paddingBottom="5dp"
            android:text="尝试说：嗨，小薇，我要吃好吃的"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kuang_2"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/home_1"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleview"
        app:layout_constraintVertical_bias="0.6"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/home_2"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:layout_marginStart="14dp"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_red"
        app:layout_constraintBottom_toBottomOf="@+id/home_1"
        app:layout_constraintStart_toEndOf="@+id/home_1"
        app:layout_constraintTop_toTopOf="@+id/home_1"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/home_3"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:layout_marginStart="14dp"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_red"
        app:layout_constraintBottom_toBottomOf="@+id/home_2"
        app:layout_constraintStart_toEndOf="@+id/home_2"
        app:layout_constraintTop_toTopOf="@+id/home_2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription,MissingConstraints" />

    <ImageView
        android:id="@+id/home_4"
        android:layout_width="230dp"
        android:layout_height="350dp"
        android:layout_marginStart="14dp"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/bg_red"
        app:layout_constraintBottom_toBottomOf="@+id/home_3"
        app:layout_constraintStart_toEndOf="@+id/home_3"
        app:layout_constraintTop_toTopOf="@+id/home_3"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ContentDescription,MissingConstraints" />

    <!--顶部控制-->
    <RelativeLayout
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#7d000000"
        android:translationY="-42dp"
        android:visibility="gone">

        <!--退出-->
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/back_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="退出"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>

        <!--热点-->
        <LinearLayout
            android:id="@+id/wifiap"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/wifiap_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="WIFI"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>

        <!--控制台-->
        <LinearLayout
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/setting_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_setting" />

            <TextView
                android:id="@+id/setting_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="控制台"
                android:textColor="@color/gray"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:visibility="gone" />

    <VideoView
        android:id="@+id/video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>